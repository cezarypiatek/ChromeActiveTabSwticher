{
  "manifest_version": 2,
  "name": "Tabs switcher",
  "description": "This extension allows the user to change active tab in windows style.",
  "version": "1.0",
  "content_scripts": [
    {
    "matches": ["<all_urls>"],
    "js": ["./src/jquery-3.3.1.slim.min.js", "./src/content.js"],
    "css": ["./src/styles.css"]
  }
],
  "background": {
      "persistent": false,
      "scripts": [ "./src/background.js" ]
   },
  "browser_action": {
    "default_icon": "assets/icon_19.png"   
  },
  "permissions": [
	"tabs",
    "activeTab",
    "storage"
  ]
}